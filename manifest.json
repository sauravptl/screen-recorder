{
    "manifest_version": 3,
    "name": "ScreenRec",
    "version": "1.3",
    "description": "A simple, lightweight screen recorder.",
    "permissions": [
        "activeTab",
        "tabs",
        "downloads"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Start Recording"
    },
    "background": {
        "service_worker": "background.js"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}